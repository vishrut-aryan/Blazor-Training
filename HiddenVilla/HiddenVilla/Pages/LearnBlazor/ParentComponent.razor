@page "/ParentComponent"

<h1 class="text-danger">Parent Child Component</h1>
<CascadingValue Value="@messageForGrandChild" Name="GrandParentMessage">
    <CascadingValue Value="@LuckyNumber" Name="GrandParentLuckyNumber">
        <ChildComponent OnClickBtnMethod="ShowMessage" Title="This title was passed down from Parent Component">
            <ChildContent>
                Render Fragment from Parent
            </ChildContent>
            <DangerChildContent>
                Danger Content from Parent
            </DangerChildContent>
        </ChildComponent>
    </CascadingValue>
</CascadingValue>

<AnotherChildComponent placeholder = "Please enter here (From Parent)"></AnotherChildComponent>

<p><b>@messageText</b></p>

@code {
    private string messageForGrandChild = "This is a message from GrandParent";
    private string messageText = "";
    public string LuckyNumber { get; set; } = "7";
    private void ShowMessage(MouseEventArgs e){
        messageText = "Blazing Text from Parent";
    }
}
